<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <android.support.constraint.Guideline
        android:id="@+id/line3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imPosterSeries"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/line3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:src="@android:drawable/ic_delete" />


    <TextView
        android:id="@+id/tvNameSeries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@id/line3"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/tvNumberEx"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="16dp"
        android:gravity="right"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@id/line3"
        app:layout_constraintTop_toBottomOf="@id/tvNameSeries" />

    <TextView
        android:id="@+id/tvDataSerie"
        android:layout_width="wrap_content"
        android:layout_height="18dp"

        android:layout_marginTop="48dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@id/line3"
        app:layout_constraintTop_toBottomOf="@id/tvNameSeries" />


</android.support.constraint.ConstraintLayout>